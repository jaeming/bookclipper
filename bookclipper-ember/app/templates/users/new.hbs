<div class="columns medium-6">
  <h3>Sign up</h3>
  <form {{action "save" on="submit"}}>
    <label>Email
      {{input value=email placeholder='A valid email'}}
    </label>
    <label>Name
      {{input value=name placeholder='Your name'}}
    </label>
    <label>Password
      {{input value=password placeholder='Enter Password' type='password'}}
    </label>
    <label>Confirm password
      {{input value=password_confirmation placeholder='Confirm Password' type='password'}}
    </label>
    <input type="submit" value="save" class="button tiny round alert" />
  </form>
  <a href="http://localhost:3000/users/auth/twitter">{{fa-icon "fa-twitter" size="lg"}} <small>Log in with Twitter</small></a>
</div>
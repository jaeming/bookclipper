<div class="columns medium-6">
    {{#each}}
      <h5>{{title}}</h5>
      {{#link-to 'bookmarks.show' this}}
        <img {{bind-attr src='bookmark_img'}} alt='' class='bookmark-img'>
      {{/link-to}}
      <button {{action 'clipIt' bookmark}} >Clip it!</button>
      <br>
      {{#each hashtags}}
        <small>
          {{#link-to 'hashtags.show' this}}#{{topic}}{{/link-to}}
          &nbsp;
        </small>
      {{/each}}
      <br>
      <small>Clipped by:</small>
      {{#each users}}
        <small class='small'>
          [{{#link-to 'users.show' this}} {{name}} {{/link-to}}]
          &nbsp;
        </small>
      {{/each}}
      <br><br>
    {{/each}}
  </div>

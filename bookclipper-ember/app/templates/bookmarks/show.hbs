<div class="columns medium-3">
  {{#each hashtags}}
    <small>#{{topic}}</small>
  {{/each}}
  <br>
  <img {{bind-attr src="bookmark_img"}} alt='' class='bookmark-img'>
  <h6><a {{bind-attr href="url"}}>Visit link</a></h6>
  <small class='small'>Clipped by {{#link-to 'users.show' this.user}} {{user.name}} {{/link-to}}</small>
</div>
<div class="columns medium-8">
  <br>
  <h5>{{title}}</h5>
  <p>{{description}}</p>
  <p class='small'>{{url}}</p>
</div>